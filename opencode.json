{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "message-writer": {
      "mode": "primary",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:./core/messages/prompts/generate.md}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "message-reviewer": {
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:./core/messages/prompts/review.md}",
      "tools": {
        "write": false,
        "edit": false
      }
    },
    "message-reviser": {
      "mode": "subagent",
      "model": "anthropic/claude-sonnet-4-20250514",
      "prompt": "{file:./core/messages/prompts/revise.md}",
      "tools": {
        "write": false,
        "edit": false
      }
    }
  }
}
